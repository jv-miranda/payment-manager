datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int    @id @default(autoincrement())
  name     String
  email    String @unique
  password String

  @@map("users")
}

model Vendor {
  id        Int      @id @default(autoincrement())
  telephone String?  @unique
  cpf       String   @unique
  name      String
  Client    Client[]

  @@map("vendors")
}

model Client {
  id        Int     @id @default(autoincrement())
  name      String
  cpf       String  @unique
  notes     String?
  telephone String? @unique
  cep       String?
  address   String?
  vendor    Vendor? @relation(fields: [vendor_id], references: [id])
  vendor_id Int

  @@map("clients")
}
